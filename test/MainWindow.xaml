<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wall Builder" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Загрузить комнаты" Command="{Binding LoadRoomsCommand}" Height="30" Margin="0,0,0,5"/>

            <ListBox ItemsSource="{Binding Rooms}" Height="250">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Построить стены" Command="{Binding BuildWallsCommand}" Height="30" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
